<div class="pt-5 pb-3">
  <div class="h2 py-2 mb-4 text-dark border-bottom">Job Detail</div>
  <div class="row gx-3">
    <div class="col-md-8 p-3 border shadow">
      <div>
        <h6 class="text-muted my-2">Job Title:</h6>
        <h5><%= job.title %></h5>
      </div>
      <div class="my-3">
        <h6 class="text-muted my-2">Job Description:</h6>
        <div class="small text-black-50"><%= job.description %></div>
      </div>
    </div>
    <div class="col-md-3 ms-4 p-3 border shadow">
      <h5>Job Overview</h5>
      <hr>
      <div class="d-flex justify-content-between my-3">
        <div class="text-black-50">Job nature</div>
        <div><i class="fa-regular fa-clock mx-1 small"></i><%= job.job_type %></div>
      </div>
      <div class="d-flex justify-content-between my-3">
        <div class="text-black-50">Location</div>
        <div><i class="fas fa-location-dot mx-1 small"></i><%= job.location %></div>
      </div>
    </div>
  </div>
</div>
